/* pages/mine/mine.wxss */
.container {
  padding: 0 7px;
  background-color: #555;
}
.msg {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px 0;
}
.user_msg {
  display: flex;
  align-items: center;
  color: #fff;
}
.vip {
  font-size: 12px;
  color: #ddd;
}
.user_msg image {
  margin-right: 10px;
}
.name {
  font-size: 16px;

}
.level {
  display: inline-block;
  font-size: 12px;
  padding: 0 9px;
  border-radius: 5px;
  background-color: #777; 
}
.avatar {
  width: 36px;
  height: 36px;
  border-radius: 18px;
}