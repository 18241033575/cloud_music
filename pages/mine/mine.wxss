/* pages/mine/mine.wxss */
.container {
  
}
.bg {
  padding: 0 1em;
  background-color: rgb(34, 34, 34);
}
.msg {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px 0;
}
.user_msg {
  display: flex;
  align-items: center;
  color: #fff;
}
.vip {
  font-size: 12px;
  color: #ddd;
}
.user_msg image {
  margin-right: 10px;
}
.name {
  font-size: 16px;

}
.level {
  display: inline-block;
  font-size: 12px;
  padding: 0 9px;
  border-radius: 5px;
  background-color: #777; 
}
.avatar {
  width: 36px;
  height: 36px;
  border-radius: 18px;
}
.user_nav {
  display: flex;
  flex-direction: row;
  padding: 5px 0 15px;
  height: 80px;
  color: #fff;
}
.user_cell {
  width: 20%;
  text-align: center;
  font-size: 12px;
  color: #ddd;
}
.nav_icon {
  margin-bottom: 10px;
  text-align: center;
  font-size: 12px;
}
.user_cell image {
  width: 24px;
  height: 24px;
}
.new_songs {
  position: sticky;
  top: 20px;
  margin-top: -20px;
  padding: 0 1em;
  border-radius: 20px 20px 0 0;
  background-color: #fff;
  overflow: hidden;
}
.title {
  line-height: 36px;
}
.songs {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: wrap;
}
.cell {
  margin-top: 40rpx;
  width: 200rpx;
  font-size: 12px;
  line-height: 1.2;
}

.cell image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.cell .desc {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  margin-top: 10rpx;
  max-height: 70rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}