/* pages/playSong/playSong.wxss */

.container {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
}

.blur_bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  z-index: -1;
}

.blur_bg image {
  width: 100%;
  height: 100vh;
  filter: blur(5px);
}

.content {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  color: #fff;
}

/* 旋转封面 */

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }

  to {
    transform: rotate(359deg);
  }
}

.coverImg {
  margin: 100px auto;
  width: 200px;
  height: 200px;
  line-height: 200px;
  border-radius: 100px;
  background-color: #222;
  text-align: center;
  
}

.coverImg image {
  margin-top: 40px;
  width: 120px;
  height: 120px;
  border-radius: 100px;
}

.playging {
  animation: rotate 6s linear infinite;
}
.btn_group {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin: 0 auto;
  width: 80%;
  height: 48px;
}
.btn_cell {
}

.btn_cell image {
  width: 24px;
  height: 24px;
}
.btn_cell .playImg {
  width: 48px;
  height: 48px;
}
.btn_cell .next_song {
  width: 30px;
  height: 30px;
}
.btn_cell .play_list {
  width: 20px;
  height: 20px;
}

.song_list_bg {
  position: absolute;
  top: 0;
  left: 0;
  display: none;
  width: 100%;
  height: 100vh;
  
}
.song_list_bg_sign {
  display: block;
}
.song_list {
  position: absolute;
  left: 10%;
  bottom: 0;
  margin: 0 auto;
  width: 80%;
  height: 60vh;
  background-color: #fff;
  border-top-left-radius: 15px;
  border-top-right-radius: 15px;
  transition: 1s;
}
.song_list_sign {
  bottom: -60vh;
}
.song_box {
  height: calc(60vh - 44px);
}
.song_list {
  padding: 0 12px;
  box-sizing: border-box;
}
.song_cell {
  display: flex;
  margin-top: 10px;

}
.song_cell image{
  margin-right: 5px;
  width: 24px;
  height: 24px;
  vertical-align: middle;
  border-radius: 2px;
}

.title {
  position: sticky;
  top: 0;
  line-height: 44px;
}
.song_name {
  display: flex;
  line-height: 24px;
  font-size: 14px;
  color: #222;
}
.song_name text {
  display: inline-block;
  max-width: 120px;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  vertical-align: middle;
}
.song_singer {
  display: inline-block;
  font-size: 12px;
  color: #999;
  max-width: 60px;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.song_box .song_cell_active {
  color: #dc2c1f!important;
}