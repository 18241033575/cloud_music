/* pages/video/video.wxss */

.container {
  background-color: #f5f5f5;
}

.nav_box {
  position: sticky;
  top: 0;
  z-index: 99;
}

.nav_list {
  /* display: flex; *//* flex-direction: row;  */
  position: sticky;
  top: 0;
  display: inline-block;
  white-space: nowrap;
  font-size: 16px;
  background-color: #fff;
  border-bottom: 1px solid #eee;
}

.nav_cell {
  display: inline-block;
  /* flex-direction: ;  */
  padding: 5px 9px;
}

.active {
  color: #dc2c1f;
  border-bottom: 1px solid #dc2c1f;
}

/* 视频列表 */

.video_list .cell {
  margin-top: 10px;
  padding: 0 5%;
  width: 100%;
  box-sizing: border-box;
  background-color: #fff;
}

.cell video {
  margin: 10px 0;
  width: 100%;
  height: 162px;
  border-radius: 5px;
  overflow: hidden;
}

.title {
  font-size: 14px;
  color: #333;
}

.info {
  display: flex;
  justify-content: space-between;
  line-height: 44px;
  font-size: 14px;
  color: #333;
}

.actor_info {
  display: flex;
  align-items: center;
}

.actor_info image {
  margin-right: 10px;
  width: 28px;
  height: 28px;
  border-radius: 14px;
  vertical-align: middle;
}

.more {
  display: flex;
  justify-content: space-between;
}

.ope_cell {
  position: relative;
  display: flex;
  align-items: center;
  margin-left: 20px;
}

.ope_cell image {
  width: 20px;
  height: 20px;
}

.ope_cell .counts {
  position: absolute;
  right: -10px;
  top: -9px;
  width: 18px;
  height: 27px;
  font-size: 10px;
  color: #999;
  background-color: #fff;
}
