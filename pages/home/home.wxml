<!--pages/home/home.wxml-->
<view class='container'>
  <swiper 
    class='banner'
    indicator-dots="true" 
    autoplay="true" 
    interval="3000"
    indicator-active-color="#dc2c1f"
  >
    <block wx:for="{{imgUrls}}" wx:key="{{index}}">
      <swiper-item>
        <image src="{{item}}" class="slide-image" width="355" height="150" />
      </swiper-item>
    </block>
  </swiper>
</view>