/* pages/home/home.wxss */
/* banner */
.banner {
  margin: 20rpx auto;
  width: 750rpx;
  height: 250rpx;
}

.banner .swiper-item {
  padding: 0 30rpx;
  box-sizing: border-box;
}

.banner image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
  overflow: hidden;
}
/* category */
.category{
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0 40rpx 0;
  border-bottom: 1px solid #DCDCDC;
}
.cate_cell{
  width: 25%;
  text-align: center;
  font-size: 12px;
}
.cate_cell image{
  width: 96rpx;
  height: 96rpx;
}

