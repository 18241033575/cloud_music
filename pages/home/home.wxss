/* pages/home/home.wxss */

.container{
  margin-bottom: 40rpx;
}
/* banner */

.banner {
  margin: 20rpx auto;
  width: 750rpx;
  height: 250rpx;
}

.banner .swiper-item {
  padding: 0 30rpx;
  box-sizing: border-box;
}

.banner image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
  overflow: hidden;
}

/* category */

.category {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0 40rpx 0;
  border-bottom: 1px solid #dcdcdc;
}

.cate_cell {
  width: 25%;
  text-align: center;
  font-size: 12px;
}

.cate_cell image {
  width: 96rpx;
  height: 96rpx;
}

/* 歌单列表 */

.song_list {
  margin-top: 20rpx;
  padding: 0 30rpx;
}

.list_title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
}

.list_title .title {
  font-size: 18px;
  font-weight: bold;
}

.songs_center {
  width: 160rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  font-size: 12px;
  border: 1px solid #dcdcdc;
  border-radius: 48rpx;
}

.list_body {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}

.cell {
  margin-top: 40rpx;
  width: 200rpx;
  font-size: 12px;
  line-height: 1.2;
}

.cell image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.cell .desc {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  margin-top: 10rpx;
  max-height: 70rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}
