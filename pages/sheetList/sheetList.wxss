/* pages/sheetList/sheetList.wxss */

/* 整个头部容器 */

.top {
  /* background: linear-gradient(to right bottom, rgb(200, 55, 66), rgb(66, 55, 200)); */
  overflow: hidden;
}

/* 图片模糊背景 */

.top_bg {
  position: absolute;
  top: 0;
  left: 0;
  margin-left: -50%;
  width: 200%;
  height: 440rpx;
  filter: blur(30px);
  z-index: -2;
}

/* 黑色模糊背景 */

.top_bg_cover {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 440rpx;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: -1;
}

.list_top {
  display: flex;
  padding: 20rpx 30rpx 0;
  box-sizing: border-box;
}

.list_top image {
  margin: 10rpx 40rpx 0 0;
  width: 220rpx;
  height: 240rpx;
  min-width: 240rpx;
  border-radius: 10rpx;
}

.cover_msg {
  flex-grow: 1;
  padding: 10rpx;
}

.cover_msg .title {
  font-size: 14px;
  color: #fff;
  line-height: 18px;
}

.cover_msg .desc {
  margin-top: 20rpx;
  max-height: 130rpx;
  font-size: 12px;
  line-height: 1.2;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #ddd;
}

/* 操作列表 */

.operate {
  display: flex;
  padding: 0 30rpx;
}

.operate .cell {
  padding: 30rpx 0;
  width: 25%;
  height: 96rpx;
  text-align: center;
  font-size: 12px;
  color: #ddd;
}

.operate .cell image {
  width: 56rpx;
  height: 56rpx;
}

/* 歌曲列表 */

.songs_list {
  background-color: #fff;
  padding: 0 30rpx 20rpx;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  font-size: 14px;
}

.songs_list .title {
  position: sticky;
  left: 0;
  top: 0;
  height: 96rpx;
  line-height: 96rpx;
  background-color: #fff;
  border-bottom: 1px solid #dcdcdc; 
}

.songs_list .title  .play_all {
  margin-right: 40rpx;
  width: 56rpx;
  height: 56rpx;
  vertical-align: middle;
}

.songs_list .second {
  font-size: 12px;
  color: #999;
}

.song_det {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  width: 100%;
  height: 96rpx;
}

.song_index {
  margin-right: 40rpx;
  font-size: 14px;
  color: #999;
}

.song_name {
  width: 160px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 14px;
  color: #000;
}

.song_singer {
  width: 160px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 12px;
  color: #999;
}

.player {
  display: flex;
  justify-content: flex-end;
  flex-grow: 1;
}

.player image {
  width: 56rpx;
  height: 56rpx;
}
