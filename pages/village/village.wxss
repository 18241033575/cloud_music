/* pages/village/village.wxss */
.container {
  
}
/* 头部导航 */
.nav {
  position: sticky;
  top: 0;
  line-height: 44px;
  background-color: #fff;
  text-align: center;
  font-size: 14px;
  box-shadow: 0 2px 2px #eee;
}
.nav text {
  padding: 9px 5px;
}
.nav text:first-child {
  margin-right: 30px;
}
.active {
  color: #dc2c1f;
  border-bottom: 1px solid #dc2c1f;
}
.det {
  display: flex;
  justify-content: space-between;
  width: 200vw;
  overflow: hidden;
  background-color: #f9f9f9;
  transition: .5s;

}

.box_cell {
  width: 100vw;
}

/* 内容详情 */
.box_title {
  padding: 0 9px;
  line-height: 40px;
}
.box {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  padding: 0 9px;
}

.cell{
  margin-bottom: 10px;
  padding: 0 5px;
  width: 45%;
  height: 185px;
  box-sizing: border-box;
  overflow: hidden;
}
.cell image {
  width: 100%;
  height: 100px;
  border-radius: 2px;
}
.radio_name {
  width: 100%;
  line-height: 24px;
  font-size: 16px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.desc {
  width: 100%;
  -webkit-line-clamp: 3;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 12px;
  line-height: 18px;  
}