/* pages/dailyRecommend/dailyRecommend.wxss */
.container {
  position: relative;
}
.banner {
  position: relative;
  width: 100%;
  height: 180px;
  z-index: -1;
}
.banner image {
  width: 100%;
  height: 100%;
}
.date {
  margin-top: -80px;
  padding: 0 1rem;
  color: #fff;
}
.day {
  font-size: 24px;
}
/* 歌曲列表 */
.songList {
  margin-top: -20px;
  background-color: #fff;
  border-radius: 18px;
  width: 100%;
}
.songBox {
  padding-bottom: 20px;
}
.title {
  padding: 0 1rem;
  line-height: 36px;
}
.title image {
  margin-right: 10px;
  width: 24px;
  height: 24px;
  vertical-align: middle;
}
.title text {
  font-size: 14px;
  vertical-align: middle;

}
.cell {
  display: flex;
  align-items: center;
  margin-top: 20px;
  padding: 0 1rem;
}

.cell image {
  margin-right: 10px;
  width: 36px;
  height: 36px;
  vertical-align: middle;
  border-radius: 2px;
}
.song {
  display: flex;
  justify-content: space-between;
  flex-grow: 1;
}
.cell .songName {
  width: 120px;
  font-size: 14px;
  color: #333;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.cell .singer {
  font-size: 12px;
  color: #999;
}
.singMsg {
  flex-flow: 1;
}
.cell .play {
  line-height: 36px;
}
.play image {
  margin-top: -5px;
  width: 24px;
  height: 24px;
  vertical-align: middle;
}
